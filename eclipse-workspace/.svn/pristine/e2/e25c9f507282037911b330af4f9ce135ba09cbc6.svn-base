@charset "UTF-8";

table {
	border: 1px solid RGB(220,220,220);
	border-collapse: collapse;
	border-left-style: none;
	border-right-style: none;
	text-align: center;
}

th {
	width: 200px;
	border: 1px solid RGB(220,220,220);
	border-collapse: collapse;
}

td {
	width: 200px;
	border: 1px solid RGB(220,220,220);
	border-left-style: none;
	border-right-style: none;
	border-collapse: collapse;
}

.checkBox {
	width: 500px;
}

.cart {
	width: 1500px;
	margin: 0 auto;
	font-size: 20px;
}

#cartTable {
	font-size: 20px;
}

#tableBar {
	background-color: RGB(220,220,220);
	color: white;
	height: 45px;
}

.order {
	border: 1px solid RGB(220,220,220);
	height: 60px;
	width: 150px;
	font-size: 20px;
}

#orderAllBtn {
	background: RGB(254,199,158);
	color: white;
}

.orderList {
	height: 60px;
	font-size: 15px; 
	background: RGB(250,250,250);
}

.orderListVal {
	height: 20px;
	text-align: left;
	margin-right: 50px;
}

.orderValue {
	margin-left: 50px;
}