@charset "UTF-8";

@import url("https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap");

.baseContent {
	margin: auto;
	margin-bottom: 40px;
	width: 77%;
}

.baseContent .summary {
	margin-bottom: 20px;
}

.baseContent .summary_h {
	display: inline-block;
	margin-right: 10px;
}

.baseContent .summary_p {
	display: inline-block;
	margin-right: 10px;
}

.baseContent .summary button {
	margin: 0;
	padding: 5px;
	font-family: "Noto Sans KR", sans-serif;
	font-weight: 400;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	width: auto;
	border: none;
	border-radius: 50px;
	box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	cursor: pointer;
	transition: 0.5s;
	background-color: #CCCCCC;
	margin-right: 50px;
}

.search_user {
	margin: auto;
	width: 77%;
	text-align: left;
	margin-bottom: 40px;
}

.search_user form {
	display: inline-block;
}
.search_user input {
	margin-right: 10px;
	border-radius: 4px;
	box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	height: 40px;
}
.search_user button {
	margin: 0;
	padding: 0.5rem 1rem;
	font-family: "Noto Sans KR", sans-serif;
	font-size: 1rem;
	font-weight: 400;
	text-align: center;
	text-decoration: none;
	display: inline-block;
	width: auto;
	border: none;
	border-radius: 4px;
	box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
	cursor: pointer;
	transition: 0.5s;
	background-color: #ffc89b;
	margin-right: 50px;
}

.search_user #serchAllBtn {
	background-color: gray;
}
.user_table {
	width: 100%;
	border-bottom: 1px solid black;
	border-collapse: collapse;
}


.user_table th, td {
	border-bottom: 1px solid black;
	padding: 3px;
	
	text-align: center;
	font-size: 0.9rem;
}

.user_table th {
	background: gray;
	color: white;
}

.mypage_table {
	width: 85%;
	border-collapse: collapse;
	float: right; 
	display:inline-block;
}

.mypage_table th,td {
	border-bottom: 1px solid black;
	padding: 3px;
	
	text-align: center;
	font-size: 0.9rem;
}

.mypage_table th {
	background: gray;
	color: white;
}

.baseContent #productForm table {
	width: 100%;
	padding: 100px;
	border: 2px solid #cccccc;
	border-radius: 4px;
}
.baseContent #productForm td {
	font-size: 1.2rem;
	font-family: "Noto Sans KR", sans-serif;
	padding: 10px;
	border: 0;
}
.baseContent #productForm input {
	width: 80%;
	font-size: 1.2rem;
}
.baseContent #productForm button {
